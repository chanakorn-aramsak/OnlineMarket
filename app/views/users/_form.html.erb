<%= form_with(model: user) do |form| %>
  <%= form.hidden_field :lock_version %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email, :required => true%>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, :required => true %>
  </div>

  <% if (@editing) %>
    <div>
      <%= form.label :password, style: "display: block" %>
      <%= form.text_field :password, :required => true, value: @user.password_digest, disabled: true %>
    </div>
  <% else %>
    <div>
      <%= form.label :password, style: "display: block" %>
      <%= form.text_field :password, :required => true %>
    </div>
  <% end %>

  <div>
    <%= form.label :user_type, style: "display: block" %>
    <%= form.number_field :user_type, :required => true, max: 2, min: 0 %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
