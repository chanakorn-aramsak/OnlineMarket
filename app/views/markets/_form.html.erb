<%= form_with(model: market) do |form| %>
  <%= form.hidden_field :lock_version %>
  <% if market.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(market.errors.count, "error") %> prohibited this market from being saved:</h2>

      <ul>
        <% market.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if (@editing == false) %>
    <div>
      <%= form.label :user_id, style: "display: block" %>
      <%= form.number_field :user_id, :required => true %>
    </div>

    <div>
      <%= form.label :item_id, style: "display: block" %>
      <%= form.number_field :item_id, :required => true %>
    </div>
  <% else %>
    <div>
      <%= form.label :user_id, style: "display: block" %>
      <%= form.number_field :user_id, disabled: true %>
    </div>

    <div>
      <%= form.label :item_id, style: "display: block" %>
      <%= form.number_field :item_id, disabled: true  %>
    </div>
  <% end %>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price, :required => true %>
  </div>

  <div>
    <%= form.label :stock, style: "display: block" %>
    <%= form.number_field :stock, :required => true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
