<h1>Sale History</h1>

<p> User ID: <%= session[:user_id] %> </p>

<table class="table", id='sale'>
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Product Category</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total Price</th>
            <th>Buyer's name</th>
            <th>Time</th>
        </tr>
    </thead>
    
    <tbody>
    <div id="items">
        <% @myItem.each do |item| %>
            <tr>
                <td> <%= Item.find(item.item_id).name %></td>
                <td> <%= Item.find(item.item_id).category %></td>
                <td> <%= item.price %></td>
                <td> <%= item.qty %></td>
                <td> <%= item.price*item.qty %></td>
                <td> <%= User.find(item.user_id).name %></td>
                <td> <%= item.updated_at.localtime %></td>
            </tr>
        <% end %>
    </div>
    </tbody>

</table>

<br><br>
<%= link_to "Back to MAIN page", '/main', class:"btn btn-primary" %>

<style>
    table, th, td {
        border: 1px solid;
    }
</style>

<script> 
    $(document).ready( function () {
       $('#sale').DataTable();
    });
</script>